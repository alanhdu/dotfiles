{
    "python": {
        "linting": {
            "flake8Enabled": true,
            "flake8Path": "/opt/anaconda/envs/neovim/bin/flake8",
            "mypyEnabled": true,
            "mypyPath": "/opt/anaconda/envs/neovim/bin/mypy",
            "pylintEnabled": false
        }
    },
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["--background-index"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        }
    }
}
