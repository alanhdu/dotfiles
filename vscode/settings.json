{
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/*.olean": true
    },
    "window.zoomLevel": 0,
    "editor.suggestSelection": "first",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.minimap.enabled": false,
    "editor.fontSize": 13,
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.terminal.focusFind",
        "-workbench.action.quickOpen"
    ],
    "vim.normalModeKeyBindings": [
        {"before": ["g", "d"], "commands": ["editor.action.peekDefinition"]},
        {"before": ["g", "D"], "commands": ["editor.action.revealDefinition"]},
        {"before": ["g", "R"], "commands": ["editor.action.rename"]},
        {"before": ["g", "T"], "commands": ["editor.action.goToTypeDefinition"]},
        {"before": ["g", "t"], "commands": ["editor.action.peekTypeDefinition"]},
        {"before": ["g", "I"], "commands": ["editor.action.goToImplementation"]},
        {"before": ["g", "i"], "commands": ["editor.action.peekImplementation"]},
        {"before": ["[", "c"], "commands": ["editor.action.marker.next"]},
        {"before": ["]", "c"], "commands": ["editor.action.marker.prev"]}
    ],
    "vim.visualModeKeyBindings": [
        {"before": [">"], "commands": ["editor.action.indentLines"]},
        {"before": ["<"], "commands": ["editor.action.outdentLines"]}
    ],
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "editor.inlayHints.enabled": "offUnlessPressed",
    "python.terminal.activateEnvironment": false
}
